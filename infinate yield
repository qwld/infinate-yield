local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local RunService = game:GetService("RunService")

local localPlayer = Players.LocalPlayer

local function findPlayers(input)
    local found = {}
    local inputLower = input:lower()
    
    if inputLower == "all" then
        found = Players:GetPlayers()
    elseif inputLower == "others" then
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= localPlayer then
                table.insert(found, p)
            end
        end
    elseif inputLower == "me" then
        table.insert(found, localPlayer)
    else
        for _, p in pairs(Players:GetPlayers()) do
            if p.Name:lower():sub(1, #input) == inputLower then
                table.insert(found, p)
            end
        end
    end
    
    return found
end

local function notify(text, duration)
    StarterGui:SetCore("SendNotification", {
        Title = "Notification",
        Text = text,
        Duration = duration or 3
    })
end

-- GUI setup

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SimpleGui"
screenGui.Parent = game:GetService("CoreGui")
screenGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame")
mainFrame.Parent = screenGui
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.Position = UDim2.new(0.3, 0, 0.4, 0)
mainFrame.Size = UDim2.new(0, 350, 0, 150)
mainFrame.Active = true
mainFrame.Draggable = true

local title = Instance.new("TextLabel")
title.Parent = mainFrame
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 30)
title.Font = Enum.Font.SourceSansBold
title.Text = "Simple Yeet Gui"
title.TextColor3 = Color3.new(1,1,1)
title.TextScaled = true

local inputBox = Instance.new("TextBox")
inputBox.Parent = mainFrame
inputBox.PlaceholderText = "Enter player (name/all/others/me)"
inputBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
inputBox.BorderSizePixel = 0
inputBox.Position = UDim2.new(0.05, 0, 0.3, 0)
inputBox.Size = UDim2.new(0.9, 0, 0, 40)
inputBox.Font = Enum.Font.SourceSans
inputBox.TextColor3 = Color3.new(1,1,1)
inputBox.TextScaled = true
inputBox.ClearTextOnFocus = false

local yeetButton = Instance.new("TextButton")
yeetButton.Parent = mainFrame
yeetButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
yeetButton.BorderSizePixel = 0
yeetButton.Position = UDim2.new(0.1, 0, 0.65, 0)
yeetButton.Size = UDim2.new(0.8, 0, 0, 40)
yeetButton.Font = Enum.Font.SourceSans
yeetButton.Text = "Yeet"
yeetButton.TextColor3 = Color3.new(1,1,1)
yeetButton.TextScaled = true

yeetButton.MouseButton1Click:Connect(function()
    local targets = findPlayers(inputBox.Text)
    local target = targets[1]
    
    if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") and localPlayer.Character and localPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local thrust = Instance.new("BodyThrust")
        thrust.Force = Vector3.new(9999, 9999, 9999)
        thrust.Parent = localPlayer.Character.HumanoidRootPart
        thrust.Name = "YeetForce"
        
        repeat
            localPlayer.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame
            thrust.Location = target.Character.HumanoidRootPart.Position
            RunService.Heartbeat:Wait()
        until not target.Character:FindFirstChild("Head")
        
        thrust:Destroy()
    else
        notify("Invalid player.")
    end
end)

notify("Gui loaded.", 3)
